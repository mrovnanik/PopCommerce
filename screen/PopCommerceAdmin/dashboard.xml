<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns=""
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd"
        default-menu-title="Dashboard" default-menu-index="1" menu-image="glyphicon glyphicon-dashboard"
        menu-image-type="icon">

    <transition name="Reports"><default-response url="../Accounting/Reports"/></transition>
    <transition name="editVendor"><default-response url="../Vendor/EditVendor"/></transition>
    <transition name="findInvoice"><default-response url="../Accounting/Invoice/FindInvoice"/></transition>
    <transition name="createInvoice">
        <!-- RUN with FORCE ON -->
        <service-call name="mantle.account.InvoiceServicesEnhancements.createAndCheck#Invoice" in-map="context + [forceCreate:false]" ignore-error="false"/>

        <actions>
            <check-errors/>
        </actions>

        <!-- open edit invoice for in case invoiceId is passed -->
        <conditional-response url="../Accounting/Invoice/EditInvoice">
            <condition>
                <expression>invoiceId != null</expression>
            </condition>
        </conditional-response>
        <default-response url="."/>
    </transition>
    <transition name="getCompanyPayables" read-only="true">
        <service-call name="mantle.account.InvoiceServicesCalendar.get#CompanyPayablesData" web-send-json-response="eventList"
                      in-map="context + [urlGString:(sri.buildUrl('/apps/PopcAdmin/Accounting/Invoice/EditInvoice').url + '?invoiceId=${invoice.invoiceId}')]"/>
        <default-response type="none"/>
    </transition>

    <actions>
        <entity-find entity-name="mantle.party.PartyDetailAndRole" list="orgInternalList">
            <econdition field-name="roleTypeId" value="OrgInternal"/>
            <econdition field-name="disabled" value="N" or-null="true"/>
            <order-by field-name="organizationName,firstName"/>
        </entity-find>

        <!-- define internal companies list (of maps) and pass it to the render thing downstairs -->
        <set field="internalCompanies" from="[]"/>

        <!--@ToDo have to load predefined colors from a kind of settings -->
        <!-- predefined colors for the first customer -->
        <set field="predefinedColors" from="[]"/>

        <script>
            predefinedColors.add([partyId:"SRO", colorNum:"#f48519"])
            predefinedColors.add([partyId:"SLOVAKIA", colorNum:"#287c37"])
            predefinedColors.add([partyId:"FO", colorNum:"#0e6595"])

            def defaultFillColor = '#f48519'

            for (def orgInternal in orgInternalList)
                internalCompanies.add([partyId: orgInternal.partyId, colorNum: predefinedColors.find {it.partyId=="${orgInternal.partyId}"}?.colorNum?:defaultFillColor])

        </script>
    </actions>

    <widgets>
        <container-row>
            <!-->MAIN VIEW<-->
            <row-col md="10">
                <label text="Balance" type="h3"/>
                <form-list name="OrgInternalForm" list="orgInternalList">
                    <!-- counting totals for display in the section below -->
                    <row-actions>
                        <!-- calculate receivables total -->
                        <entity-find entity-name="mantle.account.invoice.InvoiceSummary" list="recInvList"><search-form-inputs/>
                            <econdition field-name="fromPartyId" from="partyId"/>
                            <econdition field-name="statusId" operator="in" value="InvoiceFinalized,InvoiceSent"/>
                            <econdition field-name="userFormId" operator="in" value="FormInvoice"/>
                            <select-field field-name="invoiceCount"/>
                            <select-field field-name="grandTotal"/>
                            <select-field field-name="currencyUomId"/>
                        </entity-find>

                        <set field="recDesc" value=""/>
                        <iterate list="recInvList" entry="recInv">
                            <if condition="recDesc">
                                <set field="recDesc" from="recDesc + ', '"/>
                            </if>
                            <set field="recDesc" from="recDesc + recInv.invoiceCount + ec.l10n.localize(' Invoic. ') + ec.l10n.formatCurrency(recInv.grandTotal, recInv.currencyUomId, 2)"/>
                        </iterate>

                        <!-- calculate payables total -->
                        <entity-find entity-name="mantle.account.invoice.InvoiceSummary" list="pblInvList">
                            <econdition field-name="toPartyId" from="partyId"/>
                            <econdition field-name="statusId" operator="in" value="InvoiceReceived,InvoiceApproved"/>
                            <econdition field-name="userFormId" operator="in" value="FormInvoice"/>
                            <select-field field-name="invoiceCount"/><select-field field-name="grandTotal"/>
                            <select-field field-name="currencyUomId"/>
                        </entity-find>

                        <set field="pblDesc" value=""/>
                        <iterate list="pblInvList" entry="pblInv">
                            <if condition="pblDesc">
                                <set field="pblDesc" from="pblDesc + ', '"/>
                            </if>

                            <set field="pblDesc" from="pblDesc + pblInv.invoiceCount + ec.l10n.localize(' Invoic. ') + ec.l10n.formatCurrency(pblInv.grandTotal, pblInv.currencyUomId, 2)"/>
                        </iterate>

                        <!-- calculate count of invoices waiting to be checked -->
                        <entity-find entity-name="mantle.account.invoice.InvoiceSummary" list="pblToCheckInvList">
                            <econdition field-name="toPartyId" from="partyId"/>
                            <econdition field-name="statusId" operator="in" value="InvoiceReceived"/>
                            <econdition field-name="userFormId" operator="in" value="FormInvoice"/>
                            <select-field field-name="invoiceCount"/><select-field field-name="grandTotal"/>
                            <select-field field-name="currencyUomId"/>
                        </entity-find>

                        <set field="invToCheck" value=""/>
                        <iterate list="pblToCheckInvList" entry="pblToCheckInv">
                            <if condition="invToCheck">
                                <set field="invToCheck" from="invToCheck + ', '"/>
                            </if>

                            <if condition="pblToCheckInv.statusId == InvoiceApproved">
                                <set field="invToCheck" from="invToCheck + pblToCheckInv.invoiceCount + ec.l10n.localize(' Invoic. ')"/>
                            </if>
                        </iterate>
                    </row-actions>

                    <!-- displaying company name -->
                    <field name="name">
                        <default-field title="Organization">
                            <link url="editVendor" text="${organizationName?:''}${firstName?:''} ${lastName?:''}" link-type="anchor"/>
                        </default-field>
                    </field>

                    <!-- displaying invoices waiting to be checked -->
                    <field name="toBeCheckedSummary">
                        <default-field title="Incoming Invoices to Check">
                            <link url="findInvoice" text="${invToCheck?:ec.l10n.localize('None')}" link-type="anchor"
                                  parameter-map="[toPartyId:partyId, statusId:'InvoiceReceived', statusId_op:'in']"/>
                        </default-field>
                    </field>

                    <!-- displaying receivables total -->
                    <field name="recSummary">
                        <default-field title="Receivable">
                            <link url="findInvoice" text="${recDesc?:ec.l10n.localize('None')}" link-type="anchor"
                                  parameter-map="[fromPartyId:partyId, statusId:'InvoiceFinalized,InvoiceSent', statusId_op:'in']"/>
                        </default-field>
                    </field>

                    <!-- displaying payables total -->
                    <field name="pblSummary">
                        <default-field title="Payable">
                            <link url="findInvoice" text="${pblDesc?:ec.l10n.localize('None')}" link-type="anchor"
                                  parameter-map="[toPartyId:partyId, statusId:'InvoiceReceived,InvoiceApproved', statusId_op:'in']"/>
                        </default-field>
                    </field>
                </form-list>

                <!--CALENDAR WITH PAYMENT DUTIES -->
                <label text="Payables Calendar" type="h3" display-if-empty="true" />

                <render-mode>
                    <text type="vuet" location="component://economy-setup/screen/Common/Dashboard/FullCalendarPayables.ftl"/>
                </render-mode>

            </row-col>

            <!-->ADMINISTRATION PANEL<-->
            <row-col md="2">
                <label text="Manage" type="h3"/>
                <container>
                    <link url="../Catalog" link-type="anchor"><image url="/popc/static/images/Catalog.png" url-type="screen"/></link>
                    <link text="Catalog" url="../Catalog" link-type="anchor"/>
                </container>
                <container>
                    <link url="../Facility" link-type="anchor"><image url="/popc/static/images/Facility.png" url-type="screen"/></link>
                    <link text="Facilities" url="../Facility" link-type="anchor"/>
                </container>
                <container>
                    <link url="../Asset" link-type="anchor"><image url="/popc/static/images/Asset.png" url-type="screen"/></link>
                    <link text="Assets" url="../Asset" link-type="anchor"/>
                </container>
                <container>
                    <link url="../Vendor" link-type="anchor"><image url="/popc/static/images/Vendor.png" url-type="screen"/></link>
                    <link text="Vendor(s)" url="../Vendor" link-type="anchor"/>
                </container>
                <container>
                    <link url="../Accounting" link-type="anchor"><image url="/popc/static/images/Accounting.png" url-type="screen"/></link>
                    <link text="Accounting" url="../Accounting" link-type="anchor"/>
                </container>
                <container>
                    <link url="Reports" link-type="anchor"><image url="/popc/static/images/Reports.png" url-type="screen"/></link>
                    <link text="Reports" url="Reports" link-type="anchor"/>
                </container>
            </row-col>

        </container-row>
    </widgets>
</screen>
